APP_ENV=prod
APP_HOST=0.0.0.0
APP_PORT=8080
API_KEY=replace-me-with-a-long-random-string-min-32-chars
LOG_LEVEL=INFO
TIMEZONE=UTC

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=opa
POSTGRES_USER=opa
POSTGRES_PASSWORD=change-me-strong-password-here

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# n8n Configuration
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-me-strong-password-here
N8N_API_KEY=change-me-strong-api-key-here
N8N_ENCRYPTION_KEY=change-me-random-32-char-encryption-key
N8N_WEBHOOK_URL=https://n8n.yourdomain.com

# Vaultwarden (optional, for secret management)
VAULTWARDEN_URL=http://vaultwarden:8000
VAULTWARDEN_TOKEN=change-me-vaultwarden-token

# Security / allow-lists
FETCH_DOMAIN_ALLOWLIST=example.com,api.github.com,api.openai.com
SSH_HOSTS_ALLOWLIST=core1,core3,backup-server
FS_ROOT=/work

# CORS Origins (comma-separated)
CORS_ORIGINS=https://chat.openai.com,https://chatgpt.com

# Cloudflare (Core3)
CLOUDFLARE_TUNNEL_TOKEN=change-me-cloudflare-tunnel-token
CLOUDFLARE_TUNNEL_ID=change-me-tunnel-id