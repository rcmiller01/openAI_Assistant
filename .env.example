APP_ENV=dev
APP_HOST=0.0.0.0
APP_PORT=8080
API_KEY=replace-me-with-a-long-random-string
LOG_LEVEL=INFO

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
